<odoo>
  <data>
    <record id="journal_view_form_inherit" model="ir.ui.view">
      <field name="name">journal.view.form</field>
      <field name="model">account.journal</field>
      <field name="inherit_id" ref="account.view_account_journal_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="replace">
          <field name="type" readonly="context.get('default_type')"/>
          <field name="residence_id" readonly="context.get('default_residence_id')"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>